<div class="topbar">
  {{#extend "@grid-container--site-width"}}
    {{#content "grid-container-content"}}
      {{#extend "@grid-row"}}
        {{#content "grid-row-content"}}
          {{#extend "@grid-column"}}
            {{#content "grid-column-content"}}
              <div class="topbar__inner">
                {{> @logo }}
              </div>
            {{/content}}
          {{/extend}}
        {{/content}}
      {{/extend}}
    {{/content}}
  {{/extend}}
</div>
